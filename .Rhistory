# 设置自由度
df <- 4
# 生成t分布的x值
x <- seq(-5, 5, length.out = 1000)
# 计算t分布的概率密度函数（PDF）
y <- dt(x, df)
# 绘制t分布
plot(x, y, type = "l", lwd = 2, col = "blue", xlab = "x", ylab = "Density", main = "T-Distribution with df = 4")
# 设置自由度
df <- 4
# 生成t分布的x值
x <- seq(-5, 5, length.out = 1000)
# 计算t分布的概率密度函数（PDF）
y_t <- dt(x, df)
# 计算标准正态分布的概率密度函数（PDF）
y_norm <- dnorm(x)
# 绘制t分布
plot(x, y_t, type = "l", lwd = 2, col = "blue", xlab = "x", ylab = "Density", main = "T-Distribution and Standard Normal Distribution")
# 添加标准正态分布曲线
lines(x, y_norm, type = "l", lwd = 2, col = "red")
# 添加图例
legend("topright", legend = c("T-Distribution (df = 4)", "Standard Normal Distribution"), lty = 1, col = c("blue", "red"), bty = "n")
